                height: 60
                
                BoxLayout:
                    size_hint:None,None
                    spacing: 5
                    Image:
                        size_hint: None,None
                        size: root.width*0.12,50
                BoxLayout:
                    size_hint:None,None 
                    spacing: 5                   
                    ButtonBlack:
                        text: root.Username
                        font_size: 20
                        size_hint: None,None
                        size: root.width*0.05 ,50
                BoxLayout: 
                    size_hint:None,None
